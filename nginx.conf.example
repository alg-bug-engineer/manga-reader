# ========================================
# Nginx配置文件 - Next.js漫画阅读器
# ========================================
# 文件位置: /etc/nginx/sites-available/manga-reader
# 使用方法:
#   1. 复制此配置到服务器
#   2. 修改 server_name 为你的域名
#   3. 创建软链接: sudo ln -s /etc/nginx/sites-available/manga-reader /etc/nginx/sites-enabled/
#   4. 测试配置: sudo nginx -t
#   5. 重载配置: sudo systemctl reload nginx
# ========================================

# HTTP - 重定向到HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name manga.ai-knowledgepoints.cn;

    # Let's Encrypt验证路径
    location /.well-known/acme-challenge/ {
        root /var/www/html;
    }

    # 其他请求重定向到HTTPS
    location / {
        return 301 https://$server_name$request_uri;
    }
}

# HTTPS - 反向代理到Next.js
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name manga.ai-knowledgepoints.cn;

    # ========================================
    # SSL证书配置
    # ========================================
    # 如果使用Let's Encrypt:
    ssl_certificate /etc/letsencrypt/live/manga.ai-knowledgepoints.cn/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/manga.ai-knowledgepoints.cn/privkey.pem;

    # SSL配置
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;

    # ========================================
    # 安全头部
    # ========================================
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # ========================================
    # 日志配置
    # ========================================
    access_log /var/log/nginx/manga-reader-access.log;
    error_log /var/log/nginx/manga-reader-error.log;

    # ========================================
    # 上传文件大小限制
    # ========================================
    client_max_body_size 100M;

    # ========================================
    # 反向代理到Next.js (端口4000)
    # ========================================
    location / {
        # ⚠️ 关键配置: 保留原始请求头
        proxy_pass http://127.0.0.1:4000;
        proxy_http_version 1.1;

        # 保留所有原始请求头(包括Referer)
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Referer $http_referer;  # ⚠️ 关键:转发Referer

        # WebSocket支持
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # 超时配置
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # 缓冲配置
        proxy_buffering off;
        proxy_cache_bypass $http_upgrade;
    }

    # ========================================
    # Next.js静态资源缓存
    # ========================================
    location /_next/static {
        proxy_pass http://127.0.0.1:4000;
        proxy_cache_valid 200 60m;
        add_header Cache-Control "public, immutable";
    }

    location /static {
        proxy_pass http://127.0.0.1:4000;
        proxy_cache_valid 200 60m;
        add_header Cache-Control "public, immutable";
    }

    # ========================================
    # 图片API不缓存
    # ========================================
    location /api/images {
        proxy_pass http://127.0.0.1:4000;
        proxy_no_cache 1;
        proxy_cache_bypass 1;
        add_header Cache-Control "no-cache, no-store, must-revalidate";

        # ⚠️ 确保Referer被正确转发
        proxy_set_header Referer $http_referer;
    }

    # ========================================
    # 其他API路由
    # ========================================
    location /api {
        proxy_pass http://127.0.0.1:4000;
        proxy_no_cache 1;
        proxy_cache_bypass 1;
    }
}

